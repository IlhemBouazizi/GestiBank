<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EspaceClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_ilhem_v0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ESPACE CLIENT"
            android:textAllCaps="true"
            android:textColor="#009688"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnListeAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONSULTATION COMPTE" />

        <Button
            android:id="@+id/btnAjoutAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEMANDE DE CHEQUIER" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCUMENTS ET CONTRATS" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnListeAgent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="CallAuthentificationClientActivity"
            android:text="DECONNEXION" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>