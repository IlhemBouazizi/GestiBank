<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EspaceAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_ilhem" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ESPACE ADMINISTRATEUR"
            android:textAllCaps="true"
            android:textColor="#009688"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnListeAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getAgentsList"
            android:text="LISTE DES AGENTS" />

        <Button
            android:id="@+id/btnAjoutAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="CallAjouterUnAgentActivity"
            android:text="AJOUTER UN AGENT" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="CallListeDesAgentsActivity"
            android:text="CONSULTER LES DEMANDES" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>